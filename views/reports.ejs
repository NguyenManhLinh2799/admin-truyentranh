<h1>Danh sách báo cáo</h1>

<hr>

<div class="row">
    <i class="fas fa-exclamation-triangle fa-2x icon"></i>
    <h2>Danh sách báo cáo truyện</h2>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Tên truyện</th>
            <th scope="col">Nội dung báo cáo</th>
            <th scope="col">Người báo cáo</th>
            <th scope="col">Ngày báo cáo</th>
            <th class="no-sort" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% for (var i = 0; i < allReportSeries.length; i++) { %>
            <tr>
                <td><%= series[i].name %></td>
                <td><%= allReportSeries[i].summary %></td>
                <td><%= seriesReportedBy[i].fullName %></td>
                <td><%= allReportSeries[i].reportedDate %></td>
                <td>
                    <a href="/report-series/<%= allReportSeries[i]._id %>" role="button" class="btn btn-light btn-sm"><i class="fas fa-eye"></i> Xem thông tin</a>
                    <a role="button" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Xóa</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<hr>

<div class="row">
    <i class="fas fa-exclamation-triangle fa-2x icon"></i>
    <h2>Danh sách báo cáo bình luận</h2>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nội dung bình luận</th>
            <th scope="col">Nội dung báo cáo</th>
            <th scope="col">Người báo cáo</th>
            <th scope="col">Ngày báo cáo</th>
            <th class="no-sort" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% for (var i = 0; i < allReportComments.length; i++) { %>
            <tr>
                <td><%= comments[i].content %></td>
                <td><%= allReportComments[i].summary %></td>
                <td><%= commentsReportedBy[i].fullName %></td>
                <td><%= allReportComments[i].reportedDate %></td>
                <td>
                    <a href="/report-comment/<%= allReportComments[i]._id %>" role="button" class="btn btn-light btn-sm"><i class="fas fa-eye"></i> Xem thông tin</a>
                    <a role="button" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Xóa</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>