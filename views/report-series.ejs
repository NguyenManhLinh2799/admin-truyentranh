<h1>Báo cáo truyện</h1>

<hr>

<div class="row">
    <div class="col-2">
        <b>Tên truyện:</b>
    </div>
    <div class="col-10">
        <p><a href="/series-info/<%= series._id %>"><%= series.name %></a></p>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <b>Người đăng:</b>
    </div>
    <div class="col-10">
        <p><a href="/member-info/<%= postedBy._id %>"><%= postedBy.fullName %></a></p>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <b>Nội dung báo cáo</b>
    </div>
    <div class="col-10">
        <%= reportSeries.summary %>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <b>Người báo cáo:</b>
    </div>
    <div class="col-10">
        <p><a href="/member-info/<%= reportedBy._id %>"><%= reportedBy.fullName %></a></p>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <b>Ngày báo cáo:</b>
    </div>
    <div class="col-10">
        <p><%= reportSeries.reportedDate %></p>
    </div>
</div>

<a href="/dismiss-report-series/<%= reportSeries._id %>" role="button" class="btn-danger btn-sm"><i class="fas fa-times"></i> Xóa báo cáo</a>