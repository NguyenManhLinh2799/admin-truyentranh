<h1>Quản lý truyện</h1>

<hr>

<div class="row">
  <i class="fas fa-book-open fa-2x icon"></i>
  <h2>Danh sách truyện mới đăng</h2>
</div>
<table id="datatable" class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tên truyện</th>
      <th scope="col">Tình trạng</th>
      <th scope="col">Ngày đăng</th>
      <th class="no-sort" scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% allSeries.forEach(series => { %>
      <tr>
        <td><%= series.name %></td>
        <td><%= statusToString(series.status) %></td>
        <td><%= series.postedDate %></td>
        <td>
          <a href="/series-info/<%= series._id %>" role="button" class="btn btn-light btn-sm"><i class="fas fa-eye"></i> Xem</a>
          <% if (series.status == -1) { %>
            <a href="#" role="button" class="btn btn-primary btn-sm"><i class="fas fa-check"></i> Duyệt</a>
            <a href="#" role="button" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Từ chối</a>
          <% } %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>